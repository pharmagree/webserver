extends layout

block content
  .login-container
    form.form-signin(action='/api/login', method='post')
      h2.form-signin-heading Login

      include flash

      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', name = 'email', value=submission.email)
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', placeholder='Password', required='', name = 'password', value=submission.password)

      button#submitInfo.submit-btn.btn.btn-lg.btn-default.btn-block(type='submit') Sign in
